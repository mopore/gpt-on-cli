    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "colors": "^1.4.0",
