{
  "name": "gpt-on-cli",
  "version": "0.2.0",
  "description": "Provide access to GPT 3 model via CLI encapsulated as a docker container.",
  "main": "App.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/mopore/gpt-on-cli"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "mocha dist/test/**/*.js --recursive --exit",
